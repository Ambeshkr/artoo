#!/usr/bin/env ruby
require 'pry'

Pry::Commands.block_command "start", "Start all robots working" do
  if defined?(Artoo::MainRobot)
    Artoo::MainRobot.work! unless Artoo::MainRobot.is_running?
  end

  Celluloid::Actor[:master].start_work
end

Pry::Commands.block_command "pause", "Pause all robots" do
  output.puts "Not yet implemented..."
  Celluloid::Actor[:master].pause_work
end

Pry::Commands.block_command "continue", "Continue all robots" do
  output.puts "Not yet implemented..."
  Celluloid::Actor[:master].continue_work
end

Pry::Commands.block_command "stop", "Stop all robots" do
  output.puts "Not yet implemented..."
  Celluloid::Actor[:master].stop_work
end

Pry::Commands.block_command "list", "List all robots" do
  output.puts Celluloid::Actor[:master].robots
end

ENV["ARTOO_CLI"] = 'true'
require ARGV[0]
Pry.start
